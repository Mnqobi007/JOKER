<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>JOKER</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>JOCKERðŸ˜‚</h1>
            <p>generate a joke.</p>
        </div>
        <form action="/get-joke" method="post" id="joke-form">
            <label for="category">category:</label>
            <select id="category" name="category">
                 <option value="Any">Any</option>
                 <option value="Programming">Programming</option>
                 <option value="Dark">Dark</option>
                 <option value="spooky">Spooky</option>
            </select>
            <label for="language">language:</label>
            <select id="language" name="language">
                 <option value="en">English</option>
                 <option value="de">German</option>
                 <option value="cs">Czech</option>
                 <option value="es">Spanish</option>
                 <option value="fr">French</option>
                 <option value="pt">Portugues</option>
            </select>
            <label for="type">type:</label>
            <select id="type" name="type">
                 <option value="single">single</option>
                 <option value="twopart">twopart</option>
            </select>
          
            <input id="generate-btn" type="submit" value="GENERATE">
        </form>
        <div class="response-area">
            <h1><%-content %></h1>
        </div>
    </div>

   <script>
        document.getElementById('joke-form').addEventListener('submit', async function(event) {
            event.preventDefault();
        
            const formData = new FormData(this);
        
            try {
                const response = await fetch('/get-joke', {
                    method: 'POST',
                    body: formData
                });
        
                const data = await response.json(); // Make sure your backend sends JSON
        
                // Show the joke in the response area
                document.querySelector('.response-area h1').innerText = data.jokeText || data.content || 'No joke found!';
            } catch (error) {
                document.querySelector('.response-area h1').innerText = 'Error fetching joke.';
            }
        });
</script>
</body>
</html>
